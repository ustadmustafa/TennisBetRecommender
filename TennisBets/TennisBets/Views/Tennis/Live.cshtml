@model List<TennisBets.Models.TennisMatch>
@{
    ViewData["Title"] = "Live Tennis Matches";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>üì∫ Live Tennis Matches</h1>
                <div>
                    <a href="@Url.Action("Index", "Tennis")" class="btn btn-outline-primary">‚Üê Back to All Matches</a>
                    <button id="refreshBtn" class="btn btn-success ms-2">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var match in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-success shadow-sm">
                        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">@match.TournamentName</h6>
                            <span class="badge bg-light text-dark">LIVE</span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-4 text-center">
                                    @if (!string.IsNullOrEmpty(match.EventFirstPlayerLogo))
                                    {
                                        <img src="@match.EventFirstPlayerLogo" alt="@match.EventFirstPlayer" class="img-fluid rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    }
                                    <div class="mt-2">
                                        <strong>@match.EventFirstPlayer</strong>
                                    </div>
                                </div>
                                <div class="col-4 text-center d-flex flex-column justify-content-center">
                                    <h4 class="text-success mb-0">VS</h4>
                                    <small class="text-muted">@match.EventStatus</small>
                                </div>
                                <div class="col-4 text-center">
                                    @if (!string.IsNullOrEmpty(match.EventSecondPlayerLogo))
                                    {
                                        <img src="@match.EventSecondPlayerLogo" alt="@match.EventSecondPlayer" class="img-fluid rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    }
                                    <div class="mt-2">
                                        <strong>@match.EventSecondPlayer</strong>
                                    </div>
                                </div>
                            </div>

                            <div class="row text-center mb-3">
                                <div class="col-12">
                                    <h5 class="text-success">@match.CurrentScore</h5>
                                    <small class="text-muted">Current Game</small>
                                </div>
                            </div>

                            <div class="row text-center mb-3">
                                <div class="col-12">
                                    <h6>@match.SetScore</h6>
                                    <small class="text-muted">Set Score</small>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between">
                                        <span><strong>Serve:</strong> @match.EventServe</span>
                                        <span><strong>Round:</strong> @match.TournamentRound</span>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center">
                                <a href="@Url.Action("Details", "Tennis", new { id = match.EventKey })" class="btn btn-success btn-sm">
                                    <i class="fas fa-chart-line"></i> Live Details
                                </a>
                                <button class="btn btn-outline-info btn-sm player-analysis-btn ms-2" 
                                        data-player1="@match.FirstPlayerKey" 
                                        data-player2="@match.SecondPlayerKey"
                                        data-match-id="@match.EventKey"
                                        data-player1-name="@match.EventFirstPlayer"
                                        data-player2-name="@match.EventSecondPlayer">
                                    üìä Player Analysis
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-tennis-ball fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Live Matches</h4>
                        <p class="text-muted">There are currently no live tennis matches. Check back later or view upcoming matches.</p>
                        <a href="@Url.Action("Upcoming", "Tennis")" class="btn btn-primary">View Upcoming Matches</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Player Analysis Modal -->
<div class="modal fade" id="playerAnalysisModal" tabindex="-1" aria-labelledby="playerAnalysisModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="playerAnalysisModalLabel">üìä Player Analysis</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="playerAnalysisContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Analyzing player statistics...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 30 seconds
        setInterval(function() {
            location.reload();
        }, 30000);

        // Manual refresh button
        document.getElementById('refreshBtn').addEventListener('click', function() {
            location.reload();
        });

        // Player Analysis Button Click
        $(document).ready(function() {
            $('.player-analysis-btn').click(function() {
                const player1Key = $(this).data('player1');
                const player2Key = $(this).data('player2');
                const matchId = $(this).data('match-id');
                const player1Name = $(this).data('player1-name');
                const player2Name = $(this).data('player2-name');
                
                $('#playerAnalysisModal').modal('show');
                loadPlayerAnalysis(player1Key, player2Key, matchId, player1Name, player2Name);
            });

            function loadPlayerAnalysis(player1Key, player2Key, matchId, player1Name, player2Name) {
                // Loading g√∂ster
                $('#playerAnalysisContent').html(`
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Analyzing player statistics for ${player1Name} vs ${player2Name}...</p>
                    </div>
                `);
                
                $.ajax({
                    url: '@Url.Action("GetPlayerAnalysis", "Tennis")',
                    type: 'GET',
                    data: { player1Key: player1Key, player2Key: player2Key },
                    success: function(response) {
                        console.log('Player Analysis API Response:', response);
                        if (response.success) {
                            response.data.player1Name = player1Name;
                            response.data.player2Name = player2Name;
                            response.data.matchId = matchId;
                            displayPlayerAnalysis(response.data);
                        } else {
                            console.error('API returned error:', response.message);
                            $('#playerAnalysisContent').html('<div class="alert alert-danger">Error loading analysis: ' + response.message + '</div>');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('AJAX Error:', {xhr: xhr, status: status, error: error});
                        $('#playerAnalysisContent').html(`
                            <div class="alert alert-danger">
                                <h6>Error loading analysis:</h6>
                                <p><strong>Status:</strong> ${status}</p>
                                <p><strong>Error:</strong> ${error}</p>
                                <p><strong>Response:</strong> ${xhr.responseText}</p>
                            </div>
                        `);
                    }
                });
            }

            function displayPlayerAnalysis(analysis) {
                console.log('Full analysis data:', analysis);
                console.log('H2H Analysis data:', analysis.h2hAnalysis);
                
                let html = `
                    <div class="row mb-3">
                        <div class="col-12">
                            <h6 class="text-primary">${analysis.player1Name} vs ${analysis.player2Name}</h6>
                            <small class="text-muted">Analysis Date: ${analysis.analysisDate}</small>
                        </div>
                    </div>
                    <hr>
                `;

                // Player 1 Analysis
                html += createPlayerAnalysisCard(analysis.player1, 1);
                
                // Player 2 Analysis
                html += createPlayerAnalysisCard(analysis.player2, 2);

                // H2H Analysis - Her zaman g√∂ster
                html += createH2HAnalysisCard(analysis.h2hAnalysis || {}, analysis.player1Name, analysis.player2Name);

                $('#playerAnalysisContent').html(html);
            }

            function createPlayerAnalysisCard(player, playerNumber) {
                const overallStats = player.overallStats;
                const surfaceStats = player.surfaceStats;
                const rankingInfo = player.rankingInfo;
                
                return `
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">Player ${playerNumber}: ${player.playerName}</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <!-- Overall Stats -->
                                        <div class="col-md-4">
                                            <h6 class="text-primary">üìä Overall Statistics</h6>
                                            <div class="table-responsive">
                                                <table class="table table-sm">
                                                    <tbody>
                                                        <tr>
                                                            <td><strong>Total Matches Won:</strong></td>
                                                            <td class="text-success">${overallStats.totalMatchesWon}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Total Matches Lost:</strong></td>
                                                            <td class="text-danger">${overallStats.totalMatchesLost}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Win Rate:</strong></td>
                                                            <td class="text-primary">${(overallStats.winRate * 100).toFixed(1)}%</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Total Titles:</strong></td>
                                                            <td class="text-warning">${overallStats.totalTitles}</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        
                                        <!-- Surface Stats -->
                                        <div class="col-md-4">
                                            <h6 class="text-primary">üèüÔ∏è Surface Performance</h6>
                                            <div class="table-responsive">
                                                <table class="table table-sm">
                                                    <tbody>
                                                        <tr>
                                                            <td><strong>Hard Court:</strong></td>
                                                            <td>${surfaceStats.hard.won}W - ${surfaceStats.hard.lost}L (${(surfaceStats.hard.winRate * 100).toFixed(1)}%)</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Clay Court:</strong></td>
                                                            <td>${surfaceStats.clay.won}W - ${surfaceStats.clay.lost}L (${(surfaceStats.clay.winRate * 100).toFixed(1)}%)</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Grass Court:</strong></td>
                                                            <td>${surfaceStats.grass.won}W - ${surfaceStats.grass.lost}L (${(surfaceStats.grass.winRate * 100).toFixed(1)}%)</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                        <!-- Ranking Info -->
                                        <div class="col-md-4">
                                            <h6 class="text-primary">üèÜ World Rankings</h6>
                                            <div class="table-responsive">
                                                <table class="table table-sm">
                                                    <tbody>
                                                        <tr>
                                                            <td><strong>ATP Ranking:</strong></td>
                                                            <td class="text-info">${rankingInfo.atpRanking}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>ATP Points:</strong></td>
                                                            <td class="text-info">${rankingInfo.atpPoints}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>WTA Ranking:</strong></td>
                                                            <td class="text-info">${rankingInfo.wtaRanking}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>WTA Points:</strong></td>
                                                            <td class="text-info">${rankingInfo.wtaPoints}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Current League:</strong></td>
                                                            <td class="text-warning">${rankingInfo.currentLeague}</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }

            function createH2HAnalysisCard(h2hAnalysis, player1Name, player2Name) {
                console.log('Creating H2H card with data:', h2hAnalysis);
                
                let html = `
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0">‚öîÔ∏è Head-to-Head Analysis</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <!-- H2H Matches -->
                                        <div class="col-md-4">
                                            <h6 class="text-success">ü§ù Direct Matches</h6>
                                            ${h2hAnalysis.headToHeadMatches && h2hAnalysis.headToHeadMatches.length > 0 ? 
                                                `<div class="table-responsive">
                                                    <table class="table table-sm">
                                                        <thead>
                                                            <tr>
                                                                <th>Date</th>
                                                                <th>Result</th>
                                                                <th>Winner</th>
                                                                <th>Tournament</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            ${h2hAnalysis.headToHeadMatches.map(match => `
                                                                <tr>
                                                                    <td>${match.eventDate}</td>
                                                                    <td>${match.eventFinalResult}</td>
                                                                    <td class="text-success">${match.winner}</td>
                                                                    <td><small>${match.tournamentName}</small></td>
                                                                </tr>
                                                            `).join('')}
                                                        </tbody>
                                                    </table>
                                                </div>` : 
                                                '<p class="text-muted">No direct matches found between these players.</p>'
                                            }
                                        </div>
                                        
                                        <!-- Player 1 Recent Matches -->
                                        <div class="col-md-4">
                                            <h6 class="text-primary">üìä ${player1Name} - Last 10 Matches</h6>
                                            ${h2hAnalysis.player1RecentMatches && h2hAnalysis.player1RecentMatches.length > 0 ? 
                                                `<div class="table-responsive">
                                                    <table class="table table-sm">
                                                        <thead>
                                                            <tr>
                                                                <th>Date</th>
                                                                <th>Opponent</th>
                                                                <th>Result</th>
                                                                <th>Winner</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            ${h2hAnalysis.player1RecentMatches.map(match => `
                                                                <tr>
                                                                    <td>${match.eventDate}</td>
                                                                    <td>${match.eventSecondPlayer}</td>
                                                                    <td>${match.eventFinalResult}</td>
                                                                    <td class="${match.winner === player1Name ? 'text-success' : 'text-danger'}">${match.winner}</td>
                                                                </tr>
                                                            `).join('')}
                                                        </tbody>
                                                    </table>
                                                </div>` : 
                                                '<p class="text-muted">No recent matches found for this player.</p>'
                                            }
                                        </div>

                                        <!-- Player 2 Recent Matches -->
                                        <div class="col-md-4">
                                            <h6 class="text-primary">üìä ${player2Name} - Last 10 Matches</h6>
                                            ${h2hAnalysis.player2RecentMatches && h2hAnalysis.player2RecentMatches.length > 0 ? 
                                                `<div class="table-responsive">
                                                    <table class="table table-sm">
                                                        <thead>
                                                            <tr>
                                                                <th>Date</th>
                                                                <th>Opponent</th>
                                                                <th>Result</th>
                                                                <th>Winner</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            ${h2hAnalysis.player2RecentMatches.map(match => `
                                                                <tr>
                                                                    <td>${match.eventDate}</td>
                                                                    <td>${match.eventSecondPlayer}</td>
                                                                    <td>${match.eventFinalResult}</td>
                                                                    <td class="${match.winner === player2Name ? 'text-success' : 'text-danger'}">${match.winner}</td>
                                                                </tr>
                                                            `).join('')}
                                                        </tbody>
                                                    </table>
                                                </div>` : 
                                                '<p class="text-muted">No recent matches found for this player.</p>'
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                return html;
            }
        });
    </script>
}
