@model List<TennisBets.Models.TennisMatch>
@{
    ViewData["Title"] = "Upcoming Tennis Matches";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>⏰ Upcoming Tennis Matches</h1>
                <div>
                    <a href="@Url.Action("Index", "Tennis")" class="btn btn-outline-primary">← Back to All Matches</a>
                    <button id="refreshBtn" class="btn btn-primary ms-2">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var match in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">@match.TournamentName</h6>
                                <small>@match.EventTypeType</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-4 text-center">
                                    @if (!string.IsNullOrEmpty(match.EventFirstPlayerLogo))
                                    {
                                        <img src="@match.EventFirstPlayerLogo" alt="@match.EventFirstPlayer" class="img-fluid rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    }
                                    <div class="mt-2">
                                        <strong>@match.EventFirstPlayer</strong>
                                    </div>
                                </div>
                                <div class="col-4 text-center d-flex flex-column justify-content-center">
                                    <h4 class="text-primary mb-0">VS</h4>
                                    <small class="text-muted">@match.TournamentRound</small>
                                </div>
                                <div class="col-4 text-center">
                                    @if (!string.IsNullOrEmpty(match.EventSecondPlayerLogo))
                                    {
                                        <img src="@match.EventSecondPlayerLogo" alt="@match.EventSecondPlayer" class="img-fluid rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    }
                                    <div class="mt-2">
                                        <strong>@match.EventSecondPlayer</strong>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span><strong>Date:</strong> @match.EventDate</span>
                                        <span><strong>Time:</strong> @match.EventTime</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span><strong>Season:</strong> @match.TournamentSeason</span>
                                        <span><strong>Type:</strong> @match.EventTypeType</span>
                                    </div>
                                    <div class="mb-2">
                                        <strong>Round:</strong> @match.TournamentRound
                                    </div>
                                </div>
                            </div>

                            <div class="text-center">
                                <a href="@Url.Action("Details", "Tennis", new { id = match.EventKey })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-info-circle"></i> Match Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-calendar fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No Upcoming Matches</h4>
                        <p class="text-muted">There are currently no upcoming tennis matches scheduled. Check back later.</p>
                        <a href="@Url.Action("Index", "Tennis")" class="btn btn-primary">View All Matches</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Manual refresh button
        document.getElementById('refreshBtn').addEventListener('click', function() {
            location.reload();
        });
    </script>
}
